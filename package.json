{
  "name": "@lvce-editor/search-process",
  "version": "0.0.0-dev",
  "description": "Search Process",
  "main": "src/searchProcessMain.js",
  "bin": "./bin/searchProcess.js",
  "type": "module",
  "scripts": {
    "test": "lerna run test",
    "type-check": "tsc -b",
    "format": "prettier --write .",
    "lint": "eslint .",
    "build": "node scripts/build.js",
    "postinstall": "lerna bootstrap --ci"
  },
  "keywords": [
    "Lvce Editor"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvce-editor/search-process.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.3.0",
    "@lvce-editor/rpc": "^1.21.0",
    "@lvce-editor/verror": "^1.6.0",
    "execa": "^9.5.2"
  },
  "optionalDependencies": {
    "@lvce-editor/ripgrep": "^1.6.0"
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "node/prefer-global/process": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off",
      "quotes": "off",
      "n/prefer-global/process": [
        "error",
        "always"
      ]
    },
    "ignores": [
      "distmin"
    ]
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lvce-editor/eslint-config": "^1.22.0",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "@lerna/legacy-package-management": "^8.1.9",
    "lerna": "^8.1.9",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
