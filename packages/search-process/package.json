{
  "name": "@lvce-editor/preview-process",
  "version": "0.0.0-dev",
  "description": "Preview Process",
  "keywords": [
    "Lvce Editor",
    "Preview"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/preview-process.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/previewProcessMain.ts",
  "bin": {
    "preview-process": "bin/previewProcess.js"
  },
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 79,
        "functions": 94,
        "lines": 92
      }
    }
  },
  "dependencies": {
    "@lvce-editor/rpc": "^1.21.0",
    "@lvce-editor/verror": "^1.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=22"
  }
}
